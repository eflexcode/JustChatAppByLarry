<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000"
    android:padding="3dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_chat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_margin="6dp" />

        <TextView
            android:id="@+id/chat_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/profile_image_chat"
            android:background="@drawable/chat_you"
            android:padding="5dp"
            android:text="come store tommorow  ooo"
            android:textColor="#fff"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/isseen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_image_chat"
            android:layout_alignParentStart="true"
            android:paddingLeft="8dp"
            android:text="seen"
            android:visibility="gone"
            android:textColor="#fff"
            android:textSize="17sp" />

    </RelativeLayout>

</RelativeLayout>