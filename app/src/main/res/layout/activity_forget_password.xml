<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".ForgetPasswordActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#000"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/email_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_margin="19dp"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:textColorHint="#fff"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="email"
        app:met_floatingLabelTextColor="@color/colorAccent"
        app:met_floatingLabelTextSize="15sp"
        app:met_iconLeft="@drawable/ic_email_black_24dp"
        app:met_iconPadding="4dp"
        app:met_textColor="#fff"
        app:met_textColorHint="#fff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/di"
        android:layout_below="@id/email_reset"
        android:gravity="center"
        android:text="by clicking on the button below an email well be sent to the email address you have provided"
        android:textColor="#B5B3B3"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btn_reset"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/di"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/bnt"
        android:text="reset password"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="30sp" />
</RelativeLayout>